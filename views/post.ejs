<%- include('header') %>
<%- include('navigation') %>
<form action="/api/post" method="post" class="code-editor-body">
    <div class="w3-content" style="max-width:1400px">
        <div class="w3-row">
            <div class="w3-col l8 s12">
                <div class="w3-card-4 w3-margin">
                    <div class="w3-container w3-green">
                        <h3>New Article</h3>
                    </div>
                    <div class="w3-container">

                        <label for='code'></label>
                        <textarea class="input"
                                  rows="24"
                                  cols="95"
                                  name="content"
                                  id='code'
                                  wrap="soft"
                                  autofocus
                                  required>
                        </textarea>
                    </div>
                </div>
            </div>

            <div class="w3-col l4">
                <div class="w3-card-4 w3-margin">
                    <div class="w3-container w3-green">
                        <h3>Input Form</h3>
                    </div>

                    <div class="w3-container w3-center">
                        <label>
                            <input class="w3-input w3-animate-input w3-hover-shadow"
                                   type="text"
                                   placeholder="title"
                                   name="title">
                        </label>
                        <label>
                            <input class="w3-input w3-animate-input w3-hover-shadow"
                                   type="text"
                                   placeholder="tag"
                                   name="tag">
                        </label>
                        <label>
                            <input class="w3-input w3-animate-input w3-hover-shadow"
                                   type="text"
                                   placeholder="description"
                                   name="description">
                        </label>
                        <div class="w3-section">
                            <input type="reset" value="Clear" class="w3-button w3-red">
                            <input type="submit" value="Post" class="w3-button w3-green">
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
<%- include('end') %>