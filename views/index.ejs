<%- include('./partials/header') %>
<%- include('./partials/navigation') %>
<%- include('./partials/message') %>
<!--Content here-->
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-9" id="articleList">
            <% if (articles.length){ %>
                <% articles.forEach((article)=>{ %>
                    <div class="card article-list shadow-box bg-transparent" id="article_<%= article.id %>">
                        <div class="card-body">
                            <h4 class="card-title font-weight-bold"
                                onclick="location.href='/article/<%= article.link %>'"
                                style="cursor: pointer"><%= article.title %></h4>
                            <div>
                                <% article.tag.split(" ").forEach(function (tag) { %>
                                    <span class="badge badge-primary badge-hover"
                                          onclick="location.href='/tag/<%= tag %>'"><%= tag %></span>
                                <% }); %>
                                <span class="badge badge-success badge-hover"
                                      onclick="location.href='/user/<%= article.author %>'"><%= article.author %></span>
                                <span class="badge badge-secondary badge-hover"
                                      onclick='onTimeTagClicked("<%= article.time %>")'><%= article.time %></span>
                                <% if(currentUser === article.author) { %>
                                    <span class="badge badge-danger badge-hover"
                                          onclick="deleteArticle(<%= article.id %>)">Delete</span>
                                    <span class="badge badge-dark badge-hover"
                                          onclick="location.href='/edit/<%= article.link %>'">Edit</span>
                                <% } %>
                                <span class="badge badge-info badge-hover"
                                      onclick="location.href='/article/<%= article.link %>'">Views: <%= article.views %></span>
                            </div>
                            <p class="card-text">
                                <%= article.description %>
                            </p>
                        </div>
                    </div>
            <% })} %>
        </div>
        <div class="col-sm-12 col-md-3">
            <div class="card shadow-box bg-transparent" style="margin-bottom: 16px">
                <div class="card-header font-weight-bold">Notice</div>
                    <div class="container" style="padding-top: 8px">
                        <article id="sidebarNotice">
                        </article>
                        <script>
                          $.get("/api/page/notice", function (data) {
                            const sidebarNotice = document.getElementById('sidebarNotice');
                            let noticeContent = "No notice."
                            if(data){
                              noticeContent = data.content;
                            }
                            sidebarNotice.innerHTML = noticeContent;
                          });
                        </script>
                    </div>
            </div>
            <div class="card shadow-box bg-transparent" style="margin-bottom: 16px">
                <div class="card-header font-weight-bold">Statistics</div>
                <div class="container" style="padding-top: 8px">
                    <canvas id="statisticsChart" height="300px"></canvas>
                    <script>
                      $.get("/api/statistics", function (statistics) {
                        let labels = [];
                        let pv = [];
                        statistics.forEach((item) => {
                          labels.push('');
                          pv.push(item.pv);
                        });
                        const ctx = document.getElementById('statisticsChart').getContext('2d');
                        const chart = new Chart(ctx, {
                          type: 'line',
                          data: {
                            labels: labels,
                            datasets:
                                [{
                                  label: 'PV',
                                  borderColor: 'rgb(255, 99, 132)',
                                  data: pv
                                }]
                          },
                          options: {}
                        });
                      });
                    </script>
                </div>
            </div>
            <% if(config.enableAd){ %>
                <%- config.ad.sidebarAd %>
            <% } %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
