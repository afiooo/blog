<%- include('./partials/header') %>
<%- include('./partials/navigation') %>
<%- include('./partials/message') %>
<!--Content here-->
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-9">
            <% if (articles.length){ %>
                <% articles.forEach((article)=>{ %>
                    <div class="card article-list shadow-box bg-transparent">
                        <div class="card-body">
                            <h4 class="card-title" onclick="location.href='/article/<%= article.link %>'" style="cursor: pointer"><%= article.title %></h4>
                            <div>
                                <span class="badge badge-primary badge-hover"
                                      onclick="location.href='/tag/<%= article.tag %>'"><%= article.tag %></span>
                                <span class="badge badge-success badge-hover"
                                      onclick="location.href='/user/<%= article.author %>'"><%= article.author %></span>
                                <span class="badge badge-secondary badge-hover"
                                      onclick='onTimeTagClicked("<%= article.time %>")'><%= article.time %></span>
                                <span class="badge badge-info badge-hover"
                                      onclick="location.href='/article/<%= article.link %>'">View</span>
                                <% if(isAbleToModify) { %>
                                <span class="badge badge-danger badge-hover"
                                      onclick="deleteArticle(<%= article.id %>)">Delete</span>
                                <span class="badge badge-dark badge-hover"
                                      onclick="location.href='/edit/<%= article.link %>'">Edit</span>
                                <% } %>

                            </div>
                            <p class="card-text">
                                <%= article.description %>
                            </p>
                        </div>
                    </div>
            <% })} %>
        </div>
        <% if(notice) { %>
            <div class="col-sm-12 col-md-3">
                <div class="card shadow-box bg-transparent">
                    <div class="card-header font-weight-bold">Notice</div>
                    <div class="container" style="padding-top: 8px">
                        <article>
                            <%- notice.content %>
                        </article>
                    </div>
                </div>
            </div>
        <% }else{ %>
            <div class="col-sm-12 col-md-3">
                <div class="card shadow-box bg-transparent">
                    <div class="card-header font-weight-bold">Notice</div>
                    <div class="card-body">
                        <p>Publish an article called "notice" as the root user, which you will see here.ðŸ˜ƒ</p>
                        <p>Similarly, publish articles called "about" and "links" that you will be able to access in the
                            navigation bar.ðŸ˜‰</p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<%- include('./partials/footer') %>
