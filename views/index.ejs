<%- include('./partials/header') %>
<%- include('./partials/nav') %>
<% if (pages.length){ %>
    <% pages.forEach((page)=>{ %>
        <div class="card" onclick="location.href='/page/<%= page.link %>'">
            <div class="card-title">
                <%= page.title %>
            </div>
            <div class="card-tag">
                <% page.tag.trim().split(" ").forEach(function (tag) { if(tag!==""){%>
                    <span class="badge" onclick="event.stopPropagation();location.href='/tags/<%= tag %>'"><%= tag %></span>
                <% }}); %>
                <span class="badge badge-success badge-hover"
                      onclick="event.stopPropagation();location.href='/user/<%= page.username %>'"><%= page.author %></span>
                <span class="badge badge-secondary badge-hover"
                      onclick="event.stopPropagation();location.href='/archives/'+timeToPath('<%= page.post_time %>')"><%= page.post_time %></span>
                <span class="badge badge-info badge-hover"
                      onclick="location.href='/page/<%= page.link %>'">Views: <%= page.view %></span>
            </div>
            <div class="card-text">
                <%= page.title %>
            </div>
        </div>
<% })} %>

<%- include('./partials/paginator') %>
<%- include('./partials/footer') %>
